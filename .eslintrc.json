{
  "env": { "node": true },
  "extends": ["eslint:recommended", "plugin:import/recommended", "prettier"],
  "reportUnusedDisableDirectives": true,
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "no-debugger": "error",
    "object-shorthand": "error",
    "require-await": "error"
  }
}
